{% extends "base.html.twig" %}

{% block title %}
    Films
{% endblock %}

{% block body %}

    <h1>
        bienvenue notre Site, voici tous nos films
    </h1>


    </div>

    {% if studios is defined %}
        <div class="row justify-content-around col-3">
            <h3>Studio</h3>
            {% for studio in studios %}
                <div class="card text-white bg-primary mb-3 col-12">
                    <div class="card-body d-flex justify-content-between">
                        <a href="/showByStudio/{{ studio.id }}">
                            <p>genre : {{ studio.name }}</p>
                        </a>
                        <span class="badge bg-primary rounded-pill">{{ studio.movies | length }}</span>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}

    </div>


{% endblock %}


