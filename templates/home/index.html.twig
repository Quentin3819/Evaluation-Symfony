{% extends "base.html.twig" %}

{% block title %}
    Films
{% endblock %}

{% block body %}

    <h1>
        bienvenue notre Site, voici tous nos films
    </h1>


    </div>

    <div class="container d-flex justify-content-between " style="padding-top: 6%">
        <div class="row justify-content-around col-10">
            <h3>Film</h3>
            {% for movie in movies %}
                <div class="card text-white bg-primary mb-3 col-6 " style="height: 40vh">
                    <div class="card-header" style="margin-bottom: 20px">{{ movie.name }}</div>
                    <div class="card-body">
                        <p class="card-text" style="max-height: 250px;
                     height: 250px;
                      white-space: nowrap;
                       overflow: hidden;
                        text-overflow: ellipsis;">Synopsis : {{ movie.synopsis }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>


{% endblock %}


