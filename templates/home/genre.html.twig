{% extends "base.html.twig" %}

{% block title %}
    Films
{% endblock %}

{% block body %}

    <h1>
        bienvenue notre Site, voici tous nos Genres
    </h1>


    </div>

        {% if genres is defined %}
            <div class="row justify-content-around col-3">
                <h3>Genres</h3>
                {% for genre in genres %}
                    <div class="card text-white bg-primary mb-3 col-12">
                        <div class="card-body d-flex justify-content-between">
                            <a href="/showBygenre/{{ genre.id }}">
                                <p>genre : {{ genre.name }}</p>
                            </a>
                            <span class="badge bg-primary rounded-pill">{{ genre.movies | length }}</span>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}

    </div>


{% endblock %}


